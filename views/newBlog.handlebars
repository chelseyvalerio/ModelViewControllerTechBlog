<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{user.name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>{{title}}</h3>

    <form class="form new-blog-form">
       <div class="form-group">
        <label for="blog-description">Blog description:{{description}}</label>
        <textarea class="form-input" id="blog-description" name="blog-description"></textarea>
      </div>
      <div class="form-group">
        <label for="blog-name">Creator Username: {{username}}:</label>
        <input class="form-input" type="text" id="blog-name" name="blog-name" />
      </div>
      <div class="form-group">
        <label for="date-created">Date Created: {{format_date date_created}}</label>
        <input class="form-input" type="number" id="date-created" name="date-created" />
      </div>
      <div class="form-group">
        <label for="blog-content">Blog content:{{content}}</label>
        <textarea class="form-input" id="blog-content" name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Post</button>
      </div>
    </form>
  </div>

  {{#if dashboard.length}}
  <div class="col-md-6 project-list">
    <h3>Posted Blogs:</h3>

    {{#each userBlogs as |blog|}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/project/{{blog.id}}">{{blog.name}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{blog.id}}">DELETE</button>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="../public/js/dashboard.js"></script>
