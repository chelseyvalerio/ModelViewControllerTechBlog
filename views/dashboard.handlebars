<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{name}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog:</h3>

    <form class="form new-project-form" method="POST" action="/">
      <div class="form-group">
        <label for="title">Blog Title:</label>
        <input class="form-input" type="text" id="title" name="title" />
      </div>
      {{!-- <div class="form-group">
        <label for="description">Description:</label>
        <input class="form-input" type="text" id="description" name="description" />
      </div> --}}
      <div class="form-group">
        <label for="content">Content:</label>
        <textarea class="form-input" id="content" name="content"></textarea>
      </div>
       <div class="form-group">
  <label for="author">Author:</label>
  <input class="form-input" type="text" id="author" name="author" />
</div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary" onclick="submitPostHandler(event)">Create</button>
      </div>
    </form>
  </div>

{{#each existingBlog as |existingBlog| }}
<div class="row mb-4 project">
  <div class="col-md-5">
    <h2>
      <a href="/project/{{existingBlog.title}}">{{existingBlog.title}}</a>
    </h2>
    <h3>
      {{existingBlog.content}}
    </h3>
    <p>Created on {{format_date existingBlog.createdAt}}</p>
  </div>
  {{!-- <div class="col-md-7">
    <p>
      {{existingBlog.content}}
    </p>
  </div> --}}
</div>
{{/each}}

<script src="/js/dashboard.js"></script>
